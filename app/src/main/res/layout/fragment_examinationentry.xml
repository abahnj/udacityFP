<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="examinationEntry"
            type="com.norvera.confession.data.models.ExaminationEntry" />
    </data>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        >

        <TextView
            android:id="@+id/examination_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@{examinationEntry.description}"
            tools:text="Do I not give GOD time everyday in Prayer"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/examination_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:gravity="center"
            android:drawableStart="@drawable/ic_menu"
            android:text="12"
            tools:text="23"
            android:textAppearance="?attr/textAppearanceListItemSecondary" />
    </LinearLayout>

</layout>
