<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/examination_of_conscience"
    tools:context=".ui.main.MainFragment">



    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/material_app_bar_default_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:text="@string/examination_of_conscience"
        app:layout_constraintBottom_toTopOf="@+id/list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:name="com.norvera.confession.ui.main.CommandmentsFragment"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/editText"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        tools:listitem="@layout/fragment_commandments" />
</androidx.constraintlayout.widget.ConstraintLayout>
